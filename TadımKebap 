            { id: 12, name: "Adana DÃ¼rÃ¼m", category: "kebap", appPrice: 300, price: 270, desc: "ZÄ±rh kÄ±ymasÄ±, Ã¶zel lavaÅŸ." },
            { id: 13, name: "Urfa DÃ¼rÃ¼m", category: "kebap", appPrice: 300, price: 270, desc: "AcÄ±sÄ±z zÄ±rh kÄ±ymasÄ±." },
            { id: 14, name: "Adana Kebap (Porsiyon)", category: "kebap", appPrice: 400, price: 370, desc: "Tabakta; pilav, kÃ¶z domates ile." },
            { id: 15, name: "Urfa Kebap (Porsiyon)", category: "kebap", appPrice: 400, price: 370, desc: "" },
            { id: 16, name: "Beyti Sarma", category: "kebap", appPrice: 420, price: 390, desc: "YoÄŸurtlu, soslu." },
            { id: 17, name: "KarÄ±ÅŸÄ±k Kebap", category: "kebap", appPrice: 900, price: 900, desc: "Adana, Urfa, ÅiÅŸ, DÃ¶ner. (Ä°kramlÄ±)", noDiscount: true }
        ];

        let cart = {};

        document.addEventListener('DOMContentLoaded', () => {
            renderMenu('all');
        });

        function renderMenu(category) {
            const container = document.getElementById('menu-container');
            container.innerHTML = '';

            const filteredItems = category === 'all' 
                ? menuItems 
                : menuItems.filter(item => item.category === category);

            filteredItems.forEach(item => {
                const count = cart[item.id] ? cart[item.id].count : 0;
                const discountPercent = item.noDiscount ? 0 : Math.round(((item.appPrice - item.price) / item.appPrice) * 100);

                const html = `
                <div class="item-card bg-white p-4 rounded-2xl shadow-sm border border-gray-100 relative">
                    ${discountPercent > 0 ? `<div class="absolute top-0 right-0 bg-red-600 text-white text-xs font-bold px-2 py-1 rounded-bl-lg rounded-tr-lg">Sepette %${discountPercent} Ä°ndirim</div>` : ''}
                    
                    <div class="flex justify-between items-start">
                        <div class="w-2/3">
                            <h3 class="font-bold text-lg text-gray-800">${item.name}</h3>
                            <p class="text-xs text-gray-500 mb-2 line-clamp-2">${item.desc}</p>
                            <div class="flex items-center gap-2">
                                <span class="text-green-600 font-bold text-lg">${item.price}â‚º</span>
                                ${!item.noDiscount ? `<span class="text-gray-400 text-sm line-through decoration-red-500">${item.appPrice}â‚º</span>` : ''}
                            </div>
                        </div>
                        
                        <div class="w-1/3 flex flex-col items-end justify-center h-full pt-2">
                             ${count === 0 ? 
                                `<button onclick="addToCart(${item.id})" class="add-btn bg-gray-100 hover:bg-green-100 text-green-700 font-bold py-2 px-4 rounded-xl text-sm border border-green-200">
                                    <i class="fas fa-plus"></i> Ekle
                                 </button>` : 
                                `<div class="flex items-center bg-green-50 rounded-lg border border-green-200">
                                    <button onclick="removeFromCart(${item.id})" class="px-3 py-1 text-green-700 font-bold text-lg">-</button>
                                    <span class="px-1 font-bold text-gray-800">${count}</span>
                                    <button onclick="addToCart(${item.id})" class="px-3 py-1 text-green-700 font-bold text-lg">+</button>
                                 </div>`
                             }
                        </div>
                    </div>
                </div>
                `;
                container.innerHTML += html;
            });
        }

        function addToCart(id) {
            if (!cart[id]) {
                cart[id] = { ...menuItems.find(i => i.id === id), count: 0 };
            }
            cart[id].count++;
            updateCartUI();
        }

        function removeFromCart(id) {
            if (cart[id]) {
                cart[id].count--;
                if (cart[id].count <= 0) {
                    delete cart[id];
                }
                updateCartUI();
            }
        }

        function updateCartUI() {
            const currentFilterBtn = document.querySelector('#categoryFilters button.bg-gray-800');
            // Buton textine gÃ¶re filtreyi bul (basit yÃ¶ntem)
            let currentFilter = 'all';
            if (currentFilterBtn) {
                const text = currentFilterBtn.innerText.toLowerCase();
                if(text.includes('fÄ±rsat')) currentFilter = 'firsat';
                else if(text.includes('fÄ±rÄ±n')) currentFilter = 'firin';
                else if(text.includes('kebap')) currentFilter = 'kebap';
                else if(text.includes('dÃ¶ner')) currentFilter = 'doner';
            }
            renderMenu(currentFilter);

            let total = 0;
            let totalAppPrice = 0;
            let itemCount = 0;

            Object.values(cart).forEach(item => {
                total += item.price * item.count;
                totalAppPrice += item.appPrice * item.count;
                itemCount += item.count;
            });

            const saved = totalAppPrice - total;
            document.getElementById('total-price').innerText = total;
            document.getElementById('saved-amount').innerText = saved;

            const cartBar = document.getElementById('cart-bar');
            if (itemCount > 0) {
                cartBar.classList.remove('hidden');
                document.body.style.paddingBottom = "120px";
            } else {
                cartBar.classList.add('hidden');
                document.body.style.paddingBottom = "20px";
            }
        }

        function filterCategory(cat) {
            const buttons = document.querySelectorAll('#categoryFilters button');
            buttons.forEach(btn => {
                const text = btn.innerText.toLowerCase();
                let isActive = false;
                if(cat === 'all' && text === 'tÃ¼mÃ¼') isActive = true;
                if(cat === 'firsat' && text.includes('fÄ±rsat')) isActive = true;
                if(cat === 'firin' && text === 'fÄ±rÄ±n') isActive = true;
                if(cat === 'kebap' && text === 'kebap') isActive = true;
                if(cat === 'doner' && text === 'dÃ¶ner') isActive = true;

                if(isActive) {
                    btn.className = "px-4 py-2 bg-gray-800 text-white rounded-full text-sm font-bold whitespace-nowrap shadow transition";
                } else {
                    btn.className = "px-4 py-2 bg-white border border-gray-300 rounded-full text-sm font-bold whitespace-nowrap shadow text-gray-600 hover:bg-gray-100 transition";
                }
            });
            renderMenu(cat);
        }

        function sendOrderToWhatsapp() {
            // TADIM KEBAP RESMÄ° HATTI
            const phone = "902624542974"; 

            let message = "*SipariÅŸ DetayÄ± (QR MenÃ¼)*\n\n";
            let total = 0;

            Object.values(cart).forEach(item => {
                message += `â–ª ${item.count} x ${item.name} (${item.price * item.count}â‚º)\n`;
                total += item.price * item.count;
            });

            message += `\n*TOPLAM: ${total} TL*\n`;
            message += `------------------\n`;
            message += `ğŸ“ *Adres:* (Konum atÄ±nÄ±z veya yazÄ±nÄ±z)\n`;
            message += `ğŸ’³ *Ã–deme:* Nakit / Kart\n\n`;
            message += `_HayÄ±rlÄ± iÅŸler, kolay gelsin!_`;

            const url = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }
